{
  "name": "biblioteca",
  "version": "1.0.0",
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "joi": "^18.0.1",
    "pg": "^8.16.3",
    "serverless-http": "^3.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/joi": "^17.2.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.9"
  },
  "scripts": {
    "start": "node ./src/app/server.js",
    "dev": "nodemon ./src/app/server.js",
    "db:migrate": "node -r dotenv/config node_modules/typeorm/cli.js migration:run -d src/config/database.js",
    "db:revert":  "node -r dotenv/config node_modules/typeorm/cli.js migration:revert -d src/config/database.js",
    "db:gen":     "node -r dotenv/config node_modules/typeorm/cli.js migration:generate src/migrations/AutoMigration -d src/config/database.js",
    "db:create":  "node -r dotenv/config node_modules/typeorm/cli.js migration:create src/migrations/ManualMigration"
  }
}
